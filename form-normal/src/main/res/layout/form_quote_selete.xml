<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white"
	android:orientation="vertical">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp">
		
		<TextView
			android:id="@+id/tv_select_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:padding="10dp"
			android:text="取消"
			android:textColor="@android:color/darker_gray"
			android:textSize="16sp" />
		
		<TextView
			android:id="@+id/tv_select_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textColor="@android:color/black"
			android:textSize="18sp" />
		
		<TextView
			android:id="@+id/tv_select_sure"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:padding="10dp"
			android:text="确认"
			android:textColor="@android:color/black"
			android:textSize="16sp" />
	
	</RelativeLayout>
	
	<vip.qsos.form_n.widget.FormMaxHeightRecyclerView
		android:id="@+id/rv_select"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="200dp"
		app:formMaxHeight="350dp"
		tools:listitem="@layout/form_item_chose_multiple" />
</LinearLayout>