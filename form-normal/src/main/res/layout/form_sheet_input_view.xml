<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/form_sheet_bg"
	android:orientation="horizontal">
	
	<TextView
		android:id="@+id/form_sheet_title"
		android:layout_width="20dp"
		android:layout_height="match_parent"
		android:background="@drawable/form_sheet_title1"
		android:ellipsize="end"
		android:ems="1"
		android:gravity="center"
		android:padding="5dp"
		android:textColor="#000000"
		android:textSize="8sp"
		app:layout_constraintBottom_toBottomOf="@id/form_sheet_input"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/form_sheet_input"
		tools:ignore="SmallSp"
		tools:text="标题测试" />
	
	<EditText
		android:id="@+id/form_sheet_input"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/form_sheet_input_bg"
		android:padding="5dp"
		android:textColor="#1C1C1C"
		android:textSize="10sp"
		tools:ignore="SmallSp"
		tools:text="测试输入" />
</LinearLayout>